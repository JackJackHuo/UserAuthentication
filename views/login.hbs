<div class="container" style="min-height:80vh">
  <div class="row justify-content-center align-items-center" style="height:80vh">
    <div class="col-6">
      <form action="/" method="post" class="d-flex flex-column text-center shadow-lg px-5 py-5 rounded" novalidate>
        <legend class="mb-5">Account Login</legend>
        <div class="form-group">
          <input type="text" name="email" class="form-control" placeholder="E-mail" required>
          <div class="alert">
            <small class="invalid-feedback">This field is required</small>
            <small class="valid-feedback">Good</small>
          </div>
          <input type="text" name="password" class="form-control" placeholder="Password" required>
          <div class="alert">
            <small class="invalid-feedback">This field is required</small>
            <small class="valid-feedback">Good</small>
          </div>
          <button type="submit" class="btn btn-primary">Sign In</button>
          <a class="btn btn-danger" href="/signup">Sign Up</a>
        </div>
      </form>
    </div>
  </div>
</div>
{{#if message}}
<script>
  alert("{{message}}")
</script>
{{/if}}